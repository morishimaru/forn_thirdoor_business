              .col-md-4
                .form-group
                  label Simple select
                  select.select-dropdown.select-flat#select-1(data-select,title='Period',name='period')
                    option(value='1', selected) Option 1
                    option(value='2') Option 2
              .col-md-4
                .form-group
                  label Multiple select
                  select.select-dropdown.select-flat#select-2(data-select,data-select-all-value='1',multiple,title='Event type',name='eventType')
                    option(value='all',selected) All
                    option(value='1') Option 1
                    option(value='2') Option 2
                    option(value='3') Option 3
                    option(value='4') Option 4
                    option(value='5') Option 5
                    option(value='6') Option 6
                    option(value='7') Option 7
                    option(value='8') Option 8
              .col-md-4
                .form-group
                  label School/Department
                  select.select-dropdown.select-flat#select-3(data-select,data-select-all-value=1,multiple,title='School/Department',name='school')
                    option(value='all',selected) All
                    option(value='1') Option 1
                    option(value='2') Option 2
            .row
              .col-12
                button.btn.btn-primary(data-reset) Reset form
