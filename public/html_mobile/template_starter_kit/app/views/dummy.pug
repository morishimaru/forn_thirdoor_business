    .bodyClass {text-transform: uppercase; text-align: center;}
    .bodyClass a {display: block; padding: 15px; margin: 5px 0; text-decoration: none; background: #fff; color: #111; border: 1px solid #000}
    .bodyClass h4 { margin: 20px 0; text-align: center;}
  .container-fluid
    .container
      .col-xs-12
        h1 Dummy content for testing
        form.form-search-event#form-1(action='', method='POST')
          .collapse.show#collapseEventFilter
